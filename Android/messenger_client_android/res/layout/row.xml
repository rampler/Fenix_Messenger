<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="65dp" android:background="#444444">

    <TextView
          android:id="@+id/rowName"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:textSize="20sp" android:paddingLeft="20dp" android:paddingBottom="5dp"
          android:paddingTop="5dp"
          android:layout_marginTop="6dp">
    </TextView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowDate" android:layout_alignParentLeft="true" android:layout_marginLeft="210dp"
            android:layout_centerVertical="true" android:layout_alignParentTop="true" android:layout_marginTop="2dp"
            android:textSize="10dp" android:textColor="#888888"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowMessage" android:layout_alignParentLeft="true" android:layout_marginLeft="25dp"
            android:layout_alignParentTop="true" android:layout_marginTop="36dp" android:textSize="10dp"
            android:textColor="#888888"
            android:maxLength="125" android:visibility="visible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowLogin" android:layout_alignParentLeft="true" android:layout_marginLeft="239dp"
            android:layout_alignParentTop="true" android:layout_marginTop="15dp" android:visibility="invisible"/>

</RelativeLayout>