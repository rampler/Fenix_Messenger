<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="#222222">

    <ViewFlipper
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/viewFlipper" android:layout_gravity="left|center_vertical">
            <include android:id="@+id/loginlayout" layout="@layout/loginlayout"/>
            <include android:id="@+id/registrationlayout" layout="@layout/registerlayout"/>
            <include android:id="@+id/serverlayout" layout="@layout/serverlayout"/>
            <include android:id="@+id/userlistlayout" layout="@layout/userlistlayout"/>
            <include android:id="@+id/messageslayout" layout="@layout/messageslayout"/>
            <include android:id="@+id/adduserlayout" layout="@layout/adduserlayout"/>
    </ViewFlipper>
</LinearLayout>