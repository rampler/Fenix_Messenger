<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#222222">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login:"
            android:id="@+id/textView"
            android:textSize="20dp"
            android:layout_marginTop="210dp" android:layout_marginLeft="20dp"/>
    <ImageView
            android:layout_width="102dp"
            android:layout_height="101dp"
            android:id="@+id/imageView" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="20dp" android:src="@drawable/logo"/>
    <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            android:layout_marginTop="200dp" android:layout_marginLeft="82dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pass:"
              android:id="@+id/textView2" android:textSize="20dp"
              android:layout_marginLeft="20dp" android:layout_marginTop="260dp"/>
    <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:password="true"
            android:layout_marginTop="250dp" android:layout_marginLeft="82dp"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Sing In"
            android:id="@+id/singin"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentLeft="false" android:layout_alignParentTop="true"
            android:layout_marginTop="310dp" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© Copyrights by Mateusz Kotlarz - 2013"
            android:id="@+id/textView3"
            android:layout_marginTop="20dp" android:textColor="#444444" android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" android:gravity="center" android:layout_alignParentBottom="true"
            android:layout_alignParentTop="false"/>
    <ImageView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView1" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="120dp" android:src="@drawable/banner"/>
    <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/register" android:layout_alignParentTop="true"
            android:layout_marginTop="400dp" android:layout_marginLeft="30dp"/>
    <Button android:layout_width="130dp" android:layout_height="wrap_content" android:text="Server"
            android:id="@+id/server"
            android:layout_alignParentLeft="false" android:layout_marginLeft="160dp"
            android:layout_alignParentTop="true" android:layout_marginTop="400dp"/>
</RelativeLayout>