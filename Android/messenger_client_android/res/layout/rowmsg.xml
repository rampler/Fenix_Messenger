<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:background="#111111">

    <TextView
          android:id="@+id/rowmsgMessage"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:textSize="15sp" android:paddingLeft="10dp" android:paddingBottom="5dp"
          android:paddingTop="15dp"
          android:layout_marginTop="6dp">
    </TextView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowmsgDate" android:layout_alignParentLeft="true" android:layout_marginLeft="15dp"
            android:layout_centerVertical="true" android:layout_alignParentTop="true" android:layout_marginTop="5dp"
            android:textSize="10dp" android:textColor="#888888"
            android:layout_alignParentRight="true" android:layout_marginRight="30dp" android:gravity="right"/>

</RelativeLayout>